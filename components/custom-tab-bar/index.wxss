.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 75px;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-radius: 20rpx;
  /* margin-bottom: 25px; */
  margin: 0 60rpx 40rpx 60rpx;
  box-shadow: 0px 3px 10px 1px rgba(204, 204, 204, 0.6);
}

