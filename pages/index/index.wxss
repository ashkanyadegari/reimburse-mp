/**index.wxss**/

/* Fonts & Colors */
.h2-light {
  font-size: 64rpx;
  font-weight: lighter;
  color: #422349;
}

.h2-bold {
  font-size: 56rpx;
  font-weight: bolder;
  color: #422349;
}
.remove-margin-bottom {
  margin: 0;
}
/* Search Bar */
.search-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0rpx 10rpx;
}

.search-button {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 1px solid #422349;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #F7F5F8;
}

.search-icon {
  width: 50rpx;
  height: 50rpx;
}

/* Dashboard */
.dashboard {
  /* width: 90vw; */
  height: 350rpx;
  background-color: #422349;
  border-radius: 20rpx;
  padding: 25rpx;
  position: relative;
}

.dashboard-desc {
  color: white;
  font-weight: 500;
}
.dashboard-number {
  font-weight: bolder;
  font-size: 48rpx;
  color: white;
}

.dashboard-stats {
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
  margin-top: 10rpx;
}

.bar {
  margin-right: 25rpx;
}

.bar-unselect {
  background-color: #4C2E52;
  width: 50rpx;
  height: 200rpx;
  border-radius: 12rpx;
}

.bar-unselect-light {
  background-color: #684F6D;
  width: 50rpx;
  height: 125rpx;
  border-radius: 12rpx;
}

.bar-selected {
  background-color: #ED876B;
  width: 50rpx;
  height: 145rpx;
  border-radius: 12rpx;
}

.bar-text {
  color: #684F6D;
  font-size: 25rpx;
}

/* My Projects */
.projects {
  margin: 10rpx 0;
}

.project-items-empty {
  text-align: center;
  margin: 25rpx 0 ;
}

.project-items-empty {
  /* text-align: center; */
  margin: 25rpx 0 ;
}

.project-card {
  background-color: #8F6799;
  height: 200rpx;
  border-radius: 20rpx;
  margin: 20rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  position: relative;
}

.project-h2 {
  font-size: 48rpx;
  font-weight: bolder;
  color: #ffff;
}

.project-p {
  font-size: 32rpx;
  color: #ffff;
}

.project-btn {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
}
/* This weeks reimbursements */

.expenses {
  margin: 10rpx 0;
}

.expense-items-empty {
  text-align: center;
  margin: 25rpx 0 ;
}

.expense-items-full {
  /* text-align: center; */
  margin: 25rpx 0 ;
}

.expense-item {
  display: flex;
  position: relative;
  /* align-items: center; */
  height: 140rpx;
  /* box-shadow: 0 0 15px rgba(155,155,155,0.2); */
  padding: 15rpx;
}

.expense-icon {
  width: 140rpx;
  height: 140rpx;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #F7F4F7;
  border-radius: 20rpx;
}

.expense-icon > image {
  width: 60rpx;
  height: 60rpx;
}

.expense-description {
  margin-left: 10rpx;
}

.expense-title {
  font-size: 36rpx;
  font-weight: bolder;
  color: #434343;
}

.expense-subtitle {
  font-size: 24rpx;
  color: #818181;
  font-weight: bolder;
}

.expense-details {
}
.expense-status {
  font-size: 24rpx;
  font-weight: bolder;
  position: absolute;
  top: 10rpx;
  right: 20rpx;
}

.expense-amount {
  font-size: 28rpx;
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
}

